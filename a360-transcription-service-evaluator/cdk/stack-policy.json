{
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": "*", 
            "Action": "Update:*",
            "Resource": "*"
        },
        {
            "Effect": "Deny",
            "Principal": "*",
            "Action": "Update:Delete",
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "ResourceType": [
                        "AWS::RDS::DBCluster",
                        "AWS::RDS::DBInstance", 
                        "AWS::S3::Bucket",
                        "AWS::DynamoDB::Table",
                        "AWS::SecretsManager::Secret"
                    ]
                }
            }
        }
    ]
}