# A360 Scraping Platform - Environment Configuration
# Copy this to .env and fill in your values

# Application Configuration
NODE_ENV=production
PORT=5000

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com
# For development, use: CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000        # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100        # Max requests per window

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Legacy MongoDB (if still needed)
DATABASE_URL=mongodb://localhost:27017/page-craft-bliss-forge

# JWT Configuration (for future auth features)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/a360-app.log

# File Upload Configuration
MAX_FILE_SIZE=10485760             # 10MB in bytes
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# External APIs (Optional)
FIRECRAWL_API_KEY=your-firecrawl-api-key
OPENAI_API_KEY=your-openai-api-key-for-rag

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-ga-tracking-id
